<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.vipul.helloandroid.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/main" />

        <TextView
            android:id="@+id/bname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_university"
            android:drawablePadding="5dp"
            android:padding="@dimen/padding_values"
            android:text="@string/school_name"
            android:textColorLink="@android:color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_action_call"
            android:drawablePadding="5dp"
            android:padding="@dimen/padding_values"
            android:text="@string/contact_no_school"
            android:textColorLink="@android:color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:drawableLeft="@drawable/ic_action_website"
            android:drawablePadding="5dp"
            android:padding="@dimen/padding_values"
            android:text="@string/school_website"
            android:textColorLink="@android:color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:drawableLeft="@drawable/ic_action_address"
            android:drawablePadding="5dp"
            android:padding="@dimen/padding_values"
            android:text="@string/school_address"
            android:textColorLink="@android:color/black"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
</ScrollView>
